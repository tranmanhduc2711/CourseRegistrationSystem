<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="sample.Subject" table="subject" schema="portal">
        <id name="id">
            <column name="id" sql-type="char(10)" length="10"/>
        </id>
        <property name="name">
            <column name="name" sql-type="char(30)" length="30" not-null="true"/>
        </property>
        <property name="credits">
            <column name="credits" sql-type="int" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>